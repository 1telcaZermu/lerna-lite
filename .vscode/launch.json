{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (roll Version)",
      "program": "${workspaceFolder}/node_modules/@ws-conventional-version-roller/cli/dist/index.js",
      "args": [
        "${relativeFile}",
        "--roll-version"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "type": "pwa-node"
    },
    {
      "name": "Launch (roll Publish)",
      "program": "${workspaceFolder}/node_modules/@ws-conventional-version-roller/cli/dist/index.js",
      "args": [
        "${relativeFile}",
        "--roll-publish"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "type": "pwa-node"
    },
    {
      "name": "Current TS File (roll Publish)",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}",
        "publish"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "stopOnEntry": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Current TS File (roll Version)",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}",
        "version"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "stopOnEntry": true,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
