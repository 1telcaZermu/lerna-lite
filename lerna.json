{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "1.10.0",
  "loglevel": "verbose",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "gitDryRun": false,
      "syncWorkspaceLock": true,
      "changelogIncludeCommitsClientLogin": " - by @%l",
      "changelogHeaderMessage": "### Automate your Workspace Versioning, Publishing & Changelog updates with [Lerna-Lite](https://github.com/ghiscoding/lerna-lite) ðŸ“¦ðŸš€",
      "message": "chore(release): publish new version %v"
    },
    "run": {
      "cmdDryRun": false
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/helpers/**",
    "**/*.md"
  ],
  "packages": [
    "packages/*"
  ]
}
